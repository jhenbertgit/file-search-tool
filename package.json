{
  "name": "file-search",
  "productName": "File Search",
  "version": "1.0.0-beta.8",
  "description": "A modern file search application",
  "main": "dist/infrastructure/electron/main-process.js",
  "$schema": "http://json.schemastore.org/package",
  "scripts": {
    "start": "pnpm run ensure:css && electron-forge start",
    "ensure:css": "node -e \"const fs = require('fs'); if (!fs.existsSync('./src/styles/output.css')) { require('child_process').execSync('pnpm run build:css:dev', {stdio: 'inherit'}); }\"",
    "dev": "concurrently \"pnpm run dev:css\" \"pnpm run dev:electron\"",
    "dev:electron": "cross-env NODE_ENV=development electron-forge start",
    "package": "pnpm run build && electron-forge package",
    "make": "pnpm run build && electron-forge make",
    "publish": "pnpm run build && electron-forge publish",
    "package:win": "pnpm run build && electron-forge package --platform win32",
    "package:mac": "pnpm run build && electron-forge package --platform darwin",
    "package:linux": "pnpm run build && electron-forge package --platform linux",
    "make:win": "pnpm run build && electron-forge make --platform win32",
    "make:mac": "pnpm run build && electron-forge make --platform darwin",
    "make:linux": "pnpm run build && electron-forge make --platform linux",
    "make:squirrel": "pnpm run build && electron-forge make --targets @electron-forge/maker-squirrel",
    "make:zip": "pnpm run build && electron-forge make --targets @electron-forge/maker-zip",
    "make:dmg": "pnpm run build && electron-forge make --targets @electron-forge/maker-dmg",
    "make:deb": "pnpm run build && electron-forge make --targets @electron-forge/maker-deb",
    "make:rpm": "pnpm run build && electron-forge make --targets @electron-forge/maker-rpm",
    "publish:win": "pnpm run build && electron-forge publish --platform win32",
    "publish:mac": "pnpm run build && electron-forge publish --platform darwin",
    "publish:linux": "pnpm run build && electron-forge publish --platform linux",
    "build": "pnpm run build:css:prod && tsc && pnpm run copy:assets",
    "build:ts": "tsc",
    "build:css:dev": "tailwindcss -i ./src/styles/input.css -o ./src/styles/output.css",
    "build:css:prod": "tailwindcss -i ./src/styles/input.css -o ./src/styles/output.css --minify",
    "dev:css": "tailwindcss -i ./src/styles/input.css -o ./dist/styles/output.css --watch",
    "copy:assets": "node scripts/copy-assets.js",
    "prebuild": "pnpm run clean",
    "clean": "node -e \"const fs = require('fs-extra'); if (fs.existsSync('./dist')) fs.removeSync('./dist');\"",
    "test": "jest",
    "test:unit": "jest",
    "test:e2e": "pnpm run build && playwright test",
    "test:coverage": "jest --coverage",
    "test:all": "pnpm run test:unit && pnpm run test:e2e",
    "lint": "eslint src/**/*.ts"
  },
  "keywords": [
    "file",
    "search",
    "electron"
  ],
  "author": {
    "name": "Jhenbert Villamucho",
    "email": "jvv205756@gmail.com"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.12.4",
  "dependencies": {
    "chokidar": "^3.6.0",
    "dotenv": "^17.2.1",
    "electron-is": "^3.0.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.1.0",
    "fs-extra": "^11.2.0",
    "inversify": "^7.9.0",
    "reflect-metadata": "^0.2.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-dmg": "^7.9.0",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron-forge/publisher-github": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "@playwright/test": "^1.55.1",
    "@tailwindcss/forms": "^0.5.10",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "37.3.1",
    "eslint": "^9.34.0",
    "playwright": "^1.55.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  }
}
